<div class="container">
<h3>お問い合わせ</h3>

<%= form_for(@inquiry) do |f| %>

    
  <div class="field name">
    <%= f.label :氏名 %><br />
    <%= f.text_field :name, required: true, :class => "form-control my-form", autocomplete: 'name' %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, required: true, :class => "form-control my-form", autocomplete: "email" %>
  </div>
  
  
  <div class="field">
    <%= f.label :お問合せ内容 %><br />
    <%= f.text_area :content, :size => "20x10", autofocus: true, required: true, :class => "form-control my-form", autocomplete: "content" %>
  </div>

 
  
  <div class="actions">
    <%= f.submit "送信", data: { confirm: "送信してOKですか？"}, class:"btn btn-primary" %>
  </div>
<% end %>


</div>
