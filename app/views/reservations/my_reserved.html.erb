<div class="container">

    <h2 class="my-reserved-title">予約履歴</h2>
    
        <table class="table table-bordered table-schedule">
          <thead>
            <tr>
              <th scope="col">日付</th>
              <th scope="col">時間</th>
              <% if User.find(current_user.id).user_type == "1" %>
               <th scope="col">Action</th>
              <% end %>
            </tr>
          </thead>
          <tbody>
            <% @reservations.each do |reservation| %>
               <tr>
                  <td><%= reservation.reserved_date %></td>
                  <td><%= reservation.reserved_space %>:00</td>
                  <% if User.find(current_user.id).user_type == "1" %>
                    <td><%= link_to "削除", "/reservations/#{reservation.id}", :method => "delete", data: { confirm: "#{reservation.reserved_date}⇨#{reservation.reserved_space}:00の予約を削除しますか？" } %></td>
                  <% end %>
               </tr>
            <% end %>
          </tbody>
        </table>

    
</div>